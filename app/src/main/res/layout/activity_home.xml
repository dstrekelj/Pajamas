<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:style="@style/AppTheme.Pajamas.HomeScreen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/offset_l">

    <Button
        style="@style/AppTheme.Pajamas.HomeScreen.Button"
        android:id="@+id/activity_home_btn_navigate_record"
        android:layout_width="match_parent"
        android:text="Record a track"/>

    <Button
        style="@style/AppTheme.Pajamas.HomeScreen.Button"
        android:id="@+id/activity_home_btn_navigate_about"
        android:layout_width="match_parent"
        android:text="About Pajamas"/>

</LinearLayout>